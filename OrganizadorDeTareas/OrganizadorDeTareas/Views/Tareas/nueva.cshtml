@using OrganizadorDeTareas

@{
    ViewBag.Title = "nueva";
}


@if (ViewBag.Carpetas == null)
{
    <h2>Nueva tarea para: @ViewBag.Nombre</h2>
}
else
{
    <h2>Nueva tarea</h2>
}
<form method="post" action="/Tareas/crear">
    <br>
    <div class="form-group">

       

        <label>Nombre:</label>
        <input type="text" class="form-control" name="Nombre">

        <label>Descripcion:</label>
        <input type="text" class="form-control" name="Descripcion">

        @if (ViewBag.Carpetas != null)
        {
            <label>Carpeta</label>
            <select name="idCarpeta" class="form-control">
                <option value="">Ninguna</option>
                @foreach (Carpeta c in ViewBag.Carpetas)
                {
                    <option value="@c.IdCarpeta">@c.Nombre</option>
                }

            </select>
        }else{
        <input type="hidden" name="IdCarpeta" value="@ViewBag.idCarpeta" />
        }

        <label>Horas Estimadas:</label>
        <input type="text" class="form-control" name="EstimadoHoras">

        <label>Fecha fin:</label>
        <div class="input-group date" id="dtp" data-target-input="nearest">
            <input type="text" name="FechaFin" class="form-control datetimepicker-input" data-target="#dtp1" />
            <div class="input-group-append" data-target="#dtp" data-toggle="datetimepicker">
                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>

        <label>Prioridad:</label>
        <input type="text" class="form-control" name="Prioridad">

        <input type="submit" class="form-control" value="Enviar">
    </div>
</form>



