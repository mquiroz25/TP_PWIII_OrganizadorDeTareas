@model List<Carpeta>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<table>
    <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
    </tr>

    @foreach (Carpeta carpeta in Model)
    {
        <tr>
            <td>@carpeta.Nombre</td>
            <td>@carpeta.Descripcion</td>
            <td> <a href="/carpetas/Editar/@carpeta.IdCarpeta">Editar</a></td>
            <td><a href="/carpetas/Borrar/@carpeta.IdCarpeta">Borrar</a></td>
        </tr>
    }
</table>
<br>
<a href="/carpetas/index/">Volver</a>
